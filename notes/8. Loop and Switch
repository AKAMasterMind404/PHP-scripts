switch Statement
 switch($op){
        case "-":
            $answer = $n1 - $n2;
            break;
        case "*":
            $answer = $n1 * $n2;
            break;
        case "/":
            $answer = $n1 / $n2;
            break;
        case "+":
            $answer = $n1 + $n2;
            break;
        case "%":
            $answer = $n1 % $n2;
            break;
        default:
            echo "Invalid input!";echo "<br>";
            break;        
    }

    echo "The answer is "; echo $answer;
